<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shape_custom_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >


    <RelativeLayout
        android:id="@+id/linr_headline_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/routeList"
            android:textColor="@color/routeListColour"
            android:textSize="20dp"/>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/recyclr_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_below="@id/linr_headline_route"
        >

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/recyclr_select_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>


</RelativeLayout>